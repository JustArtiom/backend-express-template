{
    "name": "backend-express-template",
    "version": "1.1.0",
    "description": "A typescript backend express template to use for production development ",
    "main": "dist/index.js",
    "scripts": {
        "start": "npx tsup --silent && cross-env NODE_ENV=production node dist/server",
        "dev": "npx tsup --watch --onSuccess \"nodemon dist/server\"",
        "build": "npx tsup --silent false"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JustArtiom/backend-express-template.git"
    },
    "keywords": [
        "express",
        "typescript",
        "nodejs",
        "production",
        "deployment",
        "backend"
    ],
    "author": "JustArtiom",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/JustArtiom/backend-express-template/issues"
    },
    "homepage": "https://github.com/JustArtiom/backend-express-template#readme",
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/multer": "^1.4.12",
        "@types/node": "^20.11.24",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.2",
        "tsup": "^8.0.2",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "express-async-errors": "^3.1.1",
        "joi": "^17.12.2",
        "multer": "^1.4.5-lts.1"
    }
}
